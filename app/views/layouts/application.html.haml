<!doctype html>
%html{:lang => "ja"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title= @title
    %link{:href => "/index.xml", :rel => "alternate", :title => "#{@title} - feed", :type => "application/atom+xml"}/
    %meta{:content => "Ruby / Rails / Vim / System Development / Pon de Lionといったことを @mah_lab が書き綴るBlogです。", :name => "description"}/
    %meta{:content => "@mah_lab", :name => "author"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
    = stylesheet_link_tag 'application'
    = csrf_meta_tag
  %body.bp.two-col
    #fb-root
    :javascript
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
